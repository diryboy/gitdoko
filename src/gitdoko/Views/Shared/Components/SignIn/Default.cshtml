@model SignInViewModel
<form method="post" asp-antiforgery="true" asp-controller="Account" asp-action="SignIn">
    @if ( Model.ShowValidationSummary == true )
    {
        <div asp-validation-summary="All" class="simple-list red-bullet fg-red"></div>
    }
    <div class="form-group">
        <input asp-for="UserName" placeholder="User name" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Password" placeholder="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="RememberMe" />
        <label asp-for="RememberMe" style="font-weight: normal"></label>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign In" class="btn btn-primary" />
    </div>
    <div class="form-group">
        Not an existing user?
        <a asp-controller="Account" asp-action="SignUp">Sign Up</a>!
    </div>
</form>
