@model SignInViewModel
<form method="post" asp-antiforgery="true" asp-controller="Account" asp-action="SignIn">
    <div class="input-control text">
        <span class="mif-user prepend-icon"></span>
        <input placeholder="User name" asp-for="UserName" />
    </div>
    <div class="input-control text">
        <span class="mif-key prepend-icon"></span>
        <input placeholder="Password" asp-for="Password" />
    </div>
    <div class="input-control checkbox">
        <label>
            <input asp-for="RememberMe" />
            <span class="check"></span>
            <label asp-for="RememberMe"></label>
        </label>
    </div>
    <div class="form-actions">
        <input type="submit" value="Sign In" class="button primary" />
    </div>
    <div>
        Not an existing user? Sign Up.
    </div>
</form>
