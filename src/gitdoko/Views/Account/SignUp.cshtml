@model SignUpViewModel
@{
    Layout = "SingleWindowLayout";
    ViewBag.Title = "Sign Up";
}

<form method="post" asp-antiforgery="true" class="align-center">
    <div asp-validation-summary="All" class="simple-list red-bullet fg-red"></div>
    <div class="input-control text">
        <span class="mif-user prepend-icon"></span>
        <input placeholder="User name" asp-for="UserName" />
    </div>
    <div class="clear-float"></div>
    <div class="input-control text">
        <span class="mif-key prepend-icon"></span>
        <input placeholder="Password" asp-for="Password" />
    </div>
    <div class="clear-float"></div>
    <div class="input-control text">
        <span class="mif-key prepend-icon"></span>
        <input placeholder="Confirm password" asp-for="ConfirmPassword" />
    </div>
    <div class="clear-float"></div>
    <div class="input-control checkbox">
        <label>
            <input asp-for="RememberMe" />
            <span class="check"></span>
            <label asp-for="RememberMe"></label>
        </label>
    </div>
    <div class="form-actions align-center">
        <input type="submit" value="Sign Up" class="button primary" />
    </div>
    <div class="text-secondary" style="line-height: 50px">
        Already have an account?
        <a asp-controller="Account" asp-action="SignIn">Sign In</a>!
    </div>
</form>
