@model SignUpViewModel
@{
    Layout = "SingleWindowLayout";
    ViewBag.Title = "Sign Up";
}

<form method="post" asp-antiforgery="true" class="align-center">
    <div asp-validation-summary="All" class="simple-list red-bullet fg-red"></div>
    <div class="form-group">
        <input asp-for="UserName" placeholder="User name" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Password" placeholder="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="RememberMe" />
        <label asp-for="RememberMe" style="font-weight: normal"></label>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign Up" class="btn btn-primary" />
    </div>
    <div class="form-group">
        Already have an account?
        <a asp-controller="Account" asp-action="SignIn">Sign In</a>!
    </div>
</form>
